@model CompanyModel

@if (!String.IsNullOrWhiteSpace(ViewBag.Error))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>HATA!</strong> @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container musteri">
    <form asp-controller="SuperAdmin" asp-action="CompanyEdit" method="post">
        <input type="hidden" value="@Model.Id" name="Id" />
        <div class="form-row row">
            <div class="form-group col-lg-6 col-md-6 col-12">
                <label>Kullanıcı Adı</label>
                <input type="text" class="form-control" placeholder="Firma Adı" asp-for="Name" name="Name" id="firmaAdi" />
            </div>
            <div class="form-group col-lg-6 col-md-6 col-12">
                <label>Kullanıcı Email</label>
                <input type="mail" class="form-control" placeholder="E-mail" asp-for="Email" name="Email" id="email" />
            </div>
            <div class="form-group col-lg-6 col-md-6 col-12">
                <label>Kullanıcı Şifre</label>
                <input type="text" class="form-control" placeholder="Şifre" asp-for="Password" />
            </div>
            <div class="form-group col-lg-6 col-md-6 col-12">
                <label>Şifreyi Tekrar Girin</label>
                <input type="text" class="form-control" placeholder="Şifre Tekrarı" asp-for="RePassword" />
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Firma Ekle</button>
        </div>
    </form>
</div>