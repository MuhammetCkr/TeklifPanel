@model UserModel
@{
    Layout = null;
}

@await Html.PartialAsync("_Links")

<div class="container giris">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-key">
                <img src="~/content/images/logo/400x400.png" width="20%">
            </div>
            <div class="col-lg-12 login-title">
                Şifre Yenileme
            </div>
            <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
                    <form asp-controller="Password" asp-action="ChangePassword" method="post" onsubmit="return validatePassword()">
                        <div class="form-group">
                            <label class="form-control-label">Şifre</label>
                            <input class="form-control" type="password" asp-for="Password" required>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">Şifre Tekrarı</label>
                            <input class="form-control" type="password" asp-for="RePassword" required>
                        </div>
                        @if (TempData["AlertMessage"] != null)
                        {
                            <div class="alert alert-danger" role="alert">@TempData["AlertMessage"]</div>
                        }
                        <div class="col-lg-12 loginbttm">
                            <div class="col-lg-6 login-btm login-button">
                                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3 col-md-2"></div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_Scripts")

<script>
    function validatePassword() {
        let password = document.querySelector('input[name="Password"]').value;
        let rePassword = document.querySelector('input[name="RePassword"]').value;

        if (password != rePassword) {
            alert("Şifreler uyuşmuyor");
            return false;
        }
        return true;
    }
</script>