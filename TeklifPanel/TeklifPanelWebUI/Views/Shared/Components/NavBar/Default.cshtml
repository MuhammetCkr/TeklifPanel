@model NavBarModel
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

        <button type="button" id="sidebarCollapse" class="btn btn-info">
            <i class="fas fa-align-left"></i>
        </button>
        <button class="btn btn-dark d-none ml-auto" type="button" data-toggle="collapse"
                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <i class="fas fa-align-justify"></i>
        </button>
        <div class="dovizkuru">
           <span>
                $: @Model.USD -
                €: @Model.EURO -
                £: @Model.GBP
           </span> 
            </br> @Model.Date Tarihli </br> Merkez Bankası Kuru
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="collapse navbar-collapse show" id="navbarSupportedContent">
                <div class="btn teklif-btn"><a asp-controller="Offer" asp-action="AddOffer">Teklif Oluştur</a></div>
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                           aria-expanded="false">@Model.UserName</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Password" asp-action="PasswordEdit">Şifre Yenile</a></li>
                            <li><a class="dropdown-item" asp-controller="Login" asp-action="Logout">Çıkıs Yap</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        }
    </div>
</nav>