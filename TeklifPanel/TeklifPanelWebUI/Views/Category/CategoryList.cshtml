@model List<Category>
<table class="table-fill">
    <thead>
        <tr>
            <th>Kategori Adı</th>
            <th>Kategori Açıklama</th>
            <th>Kategori Kdv Oranı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody class="table-hover">
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Details</td>
                <td>@category.KDV</td>
                <td class="text-center">
                    <a href="/Category/UpdateCategory/@category.Id"><i class="fas fa-pen" style="padding-right: 6%;"></i></a>
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@category.Id"><i class="fas fa-times"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>
