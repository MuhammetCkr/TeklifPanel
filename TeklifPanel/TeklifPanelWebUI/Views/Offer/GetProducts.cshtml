@{
    Layout = null;
}
@model List<ProductViewModel>

@foreach (var product in Model)
{
    <tr>
        <td class="text-center" >@product.CategoryName</td>
        <td class="text-center">@product.Name</td>
        <td class="text-center">@product.Code</td>
        <td class="text-center">@product.SellPrice₺</td>
        <td class="text-center">
            @foreach (var image in product.Images.Take(1))
            {
                <img src="@Jobs.ImageRoute@product.CompanyId/@image" width="40%">
            }
        </td>
        <td class="text-center">@product.Stock</td>
        <td class="text-center">
            <input type="number" class="form-control" placeholder="Adet">
        </td>
        <td class="text-center">
            <input type="text" class="form-control" id="inputIskonto" placeholder="%" value="@product.Discount" name="Discount">
        </td>
        <td class="text-center">
            <div class="form-check form-switch">
                <input  type="checkbox" name="IsActive">
            </div>
        </td>
    </tr>
}