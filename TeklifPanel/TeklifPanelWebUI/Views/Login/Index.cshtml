@model LoginModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container giris">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-key">
                @*<i class="fa fa-key" aria-hidden="true"></i>*@
                <img src="~/content/images/logo/400x400.png" width="20%">
            </div>
            <div class="col-lg-12 login-title">
                TEKLİF PANELİ
            </div>
            <div class="col-lg-12 login-form">
                <div class="col-lg-12 login-form">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success" role="alert">@TempData["Message"]</div>
                    }
                    <form asp-controller="Login" asp-action="Login" method="post">
                        <div class="form-group">
                            <label class="form-control-label">KULLANICI ADI</label>
                            <input class="form-control" type="email" asp-for="Email" required>
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">ŞİFRE</label>
                            <input class="form-control" type="password" asp-for="Password" required>
                        </div>

                        <div class="col-lg-12 loginbttm">
                            <div class="col-lg-6 login-btm login-button">
                                <button type="submit" class="btn btn-outline-primary">GİRİŞ</button>
                            </div>
                            <div class="col-lg-6 login-btm login-text">
                                <a asp-controller="Password" asp-action="ForgotPassword">Şifremi Unuttum</a>

                                <!-- Error Message -->
                                @if (TempData["AlertMessage"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">@TempData["AlertMessage"]</div>
                                }
                            </div>

                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-3 col-md-2"></div>
        </div>
    </div>
</div>


